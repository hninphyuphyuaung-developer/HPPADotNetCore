<h1>Family</h1>

@if (TempData["IsSuccess"] != null)
{
    bool IsSuccess = Convert.ToBoolean(TempData["IsSuccess"]);
    if (IsSuccess)
    {
        <div class="alert alert-success" role="alert">
            A simple success alert—check it out!
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            A simple danger alert—check it out!
        </div>
    }
}

<form method="post" action="/Family/Save">
    <div class="mb-3">
        <label class="form-label">Email address</label>
        <input type="text" name="ParentName" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Email address</label>
        <input type="text" name="SonName" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Email address</label>
        <input type="text" name="DaughterName" class="form-control">
    </div>
    <button type="button" class="btn btn-secondary">Back</button>
    <button type="submit" class="btn btn-success">Save</button>
</form>

@section scripts{
    <script>
        alert();
    </script>
}